{
  "$schema": "http://json.schemastore.org/template",
  "author": "NikolayP",
  "classifications": [
    "Build",
    "Console"
  ],
  "name": "Build App",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "A build project for creating a command-line application to run TeamCity C# script on Windows, Linux, macOS and under TeamCity build server.",
  "groupIdentity": "TeamCity.Projects",
  "precedence": "8000",
  "identity": "Build.Console",
  "shortName": "build",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Company.ConsoleApplication1",
  "preferNameDirectory": true,
  "symbols": {
    "HostIdentifier": {
      "type": "bind",
      "binding": "HostIdentifier"
    },
    "packageVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Sets the referencing package version in the created project file.",
      "replaces": "$(PackageVersion)",
      "defaultValue": "1.*",
      "displayName": "Referencing package version"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false",
      "displayName": "Skip restore"
    }
  },
  "primaryOutputs": [
    {
      "path": "Company.ConsoleApplication1.csproj"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "Program.cs"
    }
  ],
  "defaultName": "Build",
  "postActions": [
    {
      "id": "restore",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "open-file",
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "description": "Opens Program.cs in the editor",
      "manualInstructions": [],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "1"
      },
      "continueOnError": true
    }
  ]
}